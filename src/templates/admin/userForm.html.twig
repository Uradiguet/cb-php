{% extends "base.html.twig" %}
{% block body %}
    <form method="post">
        <label class="input input-bordered flex items-center gap-2">
            Login
            <input type="text" name="login" class="grow" placeholder="Login utilisateur" value="{{ user.login }}"/>
        </label>
        <label class="input input-bordered flex items-center gap-2">
            Mot de passe
            <input type="password" name="password" class="grow" value="{{ user.password }}"/>
        </label>
        <div class="divider"></div>
        <button class="btn btn-neutral">Valider</button>
    </form>
{% endblock %}